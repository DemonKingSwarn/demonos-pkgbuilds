# Maintainer: Swarnaditya Singh <demonkingswarn@protonmail.com>
pkgname=demonos-wallpapers
pkgver=1.r.
pkgrel=1
epoch=
pkgdesc="The wallpapers installed in demonos."
arch=('any')
url="https://github.com/demonkingswarn/Wallpapers.git"
license=('GPL3')
groups=()
depends=()
makedepends=(git)
checkdepends=()
optdepends=()
provides=(demonos-wallpapers)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "Wallpapers"
  install -d ${pkgdir}/opt/demonos-wallpapers/
  cp -r ${srcdir}/Wallpapers/*.jpg ${pkgdir}/opt/demonos-wallpapers/
}
